<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>source</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>SmartNotebook-${project.version}-source</baseDirectory>
    
    <fileSets>
        <!-- Source code -->
        <fileSet>
            <directory>${project.basedir}/src</directory>
            <outputDirectory>/src</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        
        <!-- Maven configuration -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>pom.xml</include>
                <include>mvnw</include>
                <include>mvnw.cmd</include>
                <include>maven-wrapper.jar</include>
                <include>.mvn/**</include>
            </includes>
        </fileSet>
        
        <!-- Configuration files -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>config.properties</include>
                <include>database.sql</include>
            </includes>
        </fileSet>
        
        <!-- Documentation -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
                <include>INSTALL.txt</include>
                <include>PACKAGING.md</include>
            </includes>
        </fileSet>
        
        <!-- Build scripts -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        
        <!-- Maven local repository (for offline build) -->
        <fileSet>
            <directory>${project.basedir}/target/maven-repo</directory>
            <outputDirectory>/maven-repository</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        
        <!-- Git ignore -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>.gitignore</include>
            </includes>
        </fileSet>
    </fileSets>
    
    <files>
        <!-- Hướng dẫn setup đầy đủ -->
        <file>
            <source>${project.basedir}/SETUP_GUIDE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
