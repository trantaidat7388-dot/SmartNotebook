/*
 * ============================================
 * FRESH CANDY GRADIENT THEME
 * Smart Notebook - JavaFX Application
 * ============================================
 * Gradient: Mint → Pastel Purple → Soft Pink
 * Style: Light, Rounded, Friendly, Modern
 * ============================================
 */

/* ============================================
   ROOT VARIABLES & BASE STYLES
   ============================================ */
.root {
    -fx-background-color: linear-gradient(to bottom, #f0fdf4, #faf5ff);
    -fx-font-family: "Segoe UI", Arial, sans-serif;
    -fx-font-size: 14px;
}

/* ============================================
   SPLASH SCREEN
   ============================================ */
.splash-root {
    -fx-background-color: linear-gradient(to bottom right, #60a5fa, #a78bfa, #fbbf24);
}

.splash-logo {
    -fx-font-size: 56px;
    -fx-font-weight: bold;
    -fx-text-fill: white;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);
}

.splash-icon {
    -fx-font-size: 80px;
    -fx-text-fill: white;
}

.splash-tagline {
    -fx-font-size: 18px;
    -fx-text-fill: white;
    -fx-opacity: 0.9;
}

.splash-loading-text {
    -fx-font-size: 16px;
    -fx-text-fill: white;
    -fx-font-style: italic;
    -fx-opacity: 0.85;
}

.splash-progress {
    -fx-pref-width: 300px;
    -fx-pref-height: 8px;
    -fx-accent: white;
}

.splash-progress .track {
    -fx-background-color: derive(white, -70%);
    -fx-background-radius: 10px;
}

.splash-progress .bar {
    -fx-background-color: white;
    -fx-background-radius: 10px;
    -fx-background-insets: 0;
}

/* ============================================
   LOGIN SCREEN
   ============================================ */
.login-root {
    -fx-background-color: linear-gradient(to bottom right, #3b82f6, #8b5cf6, #f59e0b);
}

.login-card {
    -fx-background-color: white;
    -fx-background-radius: 30px;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 30, 0, 0, 10);
    -fx-padding: 50 60 50 60;
    -fx-pref-width: 420px;
    -fx-max-width: 420px;
}

.login-icon {
    -fx-font-size: 64px;
    -fx-text-fill: #3b82f6;
}

.login-title {
    -fx-font-size: 32px;
    -fx-font-weight: bold;
    -fx-text-fill: #4a5568;
}

.login-subtitle {
    -fx-font-size: 15px;
    -fx-text-fill: #718096;
}

/* Input Fields */
.input-container {
    -fx-background-color: #f7fafc;
    -fx-background-radius: 15px;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 15px;
    -fx-border-width: 2px;
    -fx-padding: 5 15 5 15;
}

.input-icon {
    -fx-font-size: 20px;
    -fx-text-fill: #a0aec0;
}

.text-field-fresh, .password-field-fresh {
    -fx-background-color: transparent;
    -fx-border-color: transparent;
    -fx-font-size: 15px;
    -fx-text-fill: #4a5568;
    -fx-prompt-text-fill: #a0aec0;
    -fx-padding: 12 10 12 10;
}

.text-field-fresh:focused, .password-field-fresh:focused {
    -fx-background-color: transparent;
    -fx-border-color: transparent;
}

.text-field-styled {
    -fx-background-color: #f7fafc;
    -fx-background-radius: 15px;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 15px;
    -fx-border-width: 2px;
    -fx-font-size: 15px;
    -fx-text-fill: #4a5568;
    -fx-prompt-text-fill: #a0aec0;
    -fx-padding: 14 20 14 20;
}

.text-field-styled:focused {
    -fx-border-color: #a78bfa;
    -fx-background-color: white;
}

.password-field-styled {
    -fx-background-color: #f7fafc;
    -fx-background-radius: 15px;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 15px;
    -fx-border-width: 2px;
    -fx-font-size: 15px;
    -fx-text-fill: #4a5568;
    -fx-prompt-text-fill: #a0aec0;
    -fx-padding: 14 20 14 20;
}

.password-field-styled:focused {
    -fx-border-color: #a78bfa;
    -fx-background-color: white;
}

/* Buttons */
.btn-primary {
    -fx-background-color: linear-gradient(to right, #3b82f6, #06b6d4);
    -fx-text-fill: white;
    -fx-font-size: 16px;
    -fx-font-weight: bold;
    -fx-padding: 15 40 15 40;
    -fx-background-radius: 15px;
    -fx-cursor: hand;
    -fx-effect: dropshadow(gaussian, rgba(59, 130, 246, 0.5), 12, 0, 0, 5);
}

.btn-primary:hover {
    -fx-background-color: linear-gradient(to right, #2563eb, #0891b2);
    -fx-effect: dropshadow(gaussian, rgba(59, 130, 246, 0.7), 18, 0, 0, 8);
    -fx-scale-y: 1.05;
    -fx-scale-x: 1.05;
}

.btn-primary:pressed {
    -fx-background-color: #7c3aed;
}

.btn-secondary {
    -fx-background-color: white;
    -fx-text-fill: #a78bfa;
    -fx-font-size: 15px;
    -fx-font-weight: bold;
    -fx-padding: 12 30 12 30;
    -fx-background-radius: 12px;
    -fx-border-color: #a78bfa;
    -fx-border-radius: 12px;
    -fx-border-width: 2px;
    -fx-cursor: hand;
}

.btn-secondary:hover {
    -fx-background-color: #faf5ff;
    -fx-effect: dropshadow(gaussian, rgba(167, 139, 250, 0.3), 10, 0, 0, 3);
}

/* Button Outline - cho Quick Actions */
.btn-outline {
    -fx-background-color: transparent;
    -fx-text-fill: #6366f1;
    -fx-font-size: 13px;
    -fx-font-weight: bold;
    -fx-padding: 8 15;
    -fx-background-radius: 20px;
    -fx-border-color: #c7d2fe;
    -fx-border-radius: 20px;
    -fx-border-width: 1.5px;
    -fx-cursor: hand;
}

.btn-outline:hover {
    -fx-background-color: #eef2ff;
    -fx-border-color: #6366f1;
    -fx-effect: dropshadow(gaussian, rgba(99, 102, 241, 0.2), 8, 0, 0, 2);
}

.btn-outline:pressed {
    -fx-background-color: #e0e7ff;
}

.btn-green {
    -fx-background-color: linear-gradient(to right, #10b981, #34d399);
    -fx-text-fill: white;
    -fx-font-size: 15px;
    -fx-font-weight: bold;
    -fx-padding: 12 30 12 30;
    -fx-background-radius: 12px;
    -fx-cursor: hand;
    -fx-effect: dropshadow(gaussian, rgba(16, 185, 129, 0.5), 12, 0, 0, 5);
}

.btn-green:hover {
    -fx-background-color: linear-gradient(to right, #059669, #10b981);
    -fx-effect: dropshadow(gaussian, rgba(16, 185, 129, 0.7), 15, 0, 0, 7);
}

.btn-orange {
    -fx-background-color: linear-gradient(to right, #f59e0b, #fbbf24);
    -fx-text-fill: white;
    -fx-font-size: 15px;
    -fx-font-weight: bold;
    -fx-padding: 12 30 12 30;
    -fx-background-radius: 12px;
    -fx-cursor: hand;
    -fx-effect: dropshadow(gaussian, rgba(245, 158, 11, 0.5), 12, 0, 0, 5);
}

.btn-orange:hover {
    -fx-background-color: linear-gradient(to right, #d97706, #f59e0b);
    -fx-effect: dropshadow(gaussian, rgba(245, 158, 11, 0.7), 15, 0, 0, 7);
}

.btn-danger {
    -fx-background-color: linear-gradient(to right, #f56565, #fc8181);
    -fx-text-fill: white;
    -fx-font-size: 14px;
    -fx-font-weight: bold;
    -fx-padding: 10 25 10 25;
    -fx-background-radius: 10px;
    -fx-cursor: hand;
}

.btn-danger:hover {
    -fx-background-color: linear-gradient(to right, #e53e3e, #f56565);
}

.btn-ghost {
    -fx-background-color: transparent;
    -fx-text-fill: #718096;
    -fx-font-size: 14px;
    -fx-padding: 10 20 10 20;
    -fx-cursor: hand;
}

.btn-ghost:hover {
    -fx-text-fill: #a78bfa;
    -fx-background-color: derive(#a78bfa, 90%);
    -fx-background-radius: 10px;
}

/* Links */
.link-text {
    -fx-text-fill: #718096;
    -fx-font-size: 14px;
}

.link-action {
    -fx-text-fill: #a78bfa;
    -fx-font-size: 14px;
    -fx-font-weight: bold;
    -fx-cursor: hand;
    -fx-underline: false;
}

.link-action:hover {
    -fx-text-fill: #8b5cf6;
    -fx-underline: true;
}

/* Checkbox */
.check-box-fresh {
    -fx-text-fill: #718096;
    -fx-font-size: 14px;
}

.check-box-fresh .box {
    -fx-background-color: white;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 5px;
    -fx-background-radius: 5px;
    -fx-border-width: 2px;
    -fx-pref-width: 20px;
    -fx-pref-height: 20px;
}

.check-box-fresh:selected .box {
    -fx-background-color: #a78bfa;
    -fx-border-color: #a78bfa;
}

.check-box-fresh:selected .mark {
    -fx-background-color: white;
}

/* Error & Success Messages */
.error-label {
    -fx-text-fill: #e53e3e;
    -fx-font-size: 13px;
    -fx-padding: 5 0 0 5;
}

.success-label {
    -fx-text-fill: #38a169;
    -fx-font-size: 13px;
    -fx-padding: 5 0 0 5;
}

.error-box {
    -fx-background-color: #fed7d7;
    -fx-background-radius: 10px;
    -fx-padding: 12 20 12 20;
    -fx-border-color: #fc8181;
    -fx-border-radius: 10px;
}

.success-box {
    -fx-background-color: #c6f6d5;
    -fx-background-radius: 10px;
    -fx-padding: 12 20 12 20;
    -fx-border-color: #68d391;
    -fx-border-radius: 10px;
}

/* ============================================
   REGISTER SCREEN
   ============================================ */
.register-root {
    -fx-background-color: linear-gradient(to bottom right, #fbbf24, #8b5cf6, #3b82f6);
}

.register-card {
    -fx-background-color: white;
    -fx-background-radius: 30px;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 30, 0, 0, 10);
    -fx-padding: 40 50 40 50;
    -fx-pref-width: 450px;
    -fx-max-width: 450px;
}

.register-icon {
    -fx-font-size: 56px;
    -fx-text-fill: #10b981;
}

.register-title {
    -fx-font-size: 28px;
    -fx-font-weight: bold;
    -fx-text-fill: #4a5568;
}

/* ============================================
   MAIN DASHBOARD
   ============================================ */
.main-root {
    -fx-background-color: #f7fafc;
}

/* Sidebar */
.sidebar {
    -fx-background-color: linear-gradient(to bottom, #3b82f6, #8b5cf6, #f59e0b);
    -fx-pref-width: 260px;
    -fx-min-width: 260px;
    -fx-padding: 20 15 20 15;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 15, 0, 5, 0);
}

.sidebar-header {
    -fx-padding: 10 0 30 0;
}

.sidebar-logo {
    -fx-font-size: 26px;
    -fx-font-weight: bold;
    -fx-text-fill: white;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 8, 0, 2, 2);
}

.sidebar-version {
    -fx-font-size: 12px;
    -fx-text-fill: derive(white, -20%);
}

/* Sidebar Buttons */
.sidebar-btn {
    -fx-background-color: rgba(255, 255, 255, 0.15);
    -fx-text-fill: white;
    -fx-font-size: 15px;
    -fx-font-weight: 600;
    -fx-padding: 14 20 14 20;
    -fx-background-radius: 15px;
    -fx-cursor: hand;
    -fx-alignment: CENTER-LEFT;
    -fx-graphic-text-gap: 12;
    -fx-pref-width: 230px;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);
}

.sidebar-btn:hover {
    -fx-background-color: rgba(255, 255, 255, 0.3);
    -fx-font-weight: bold;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 2);
}

.sidebar-btn-active {
    -fx-background-color: white;
    -fx-text-fill: #6b46c1;
    -fx-font-weight: bold;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 8, 0, 0, 3);
}

.sidebar-btn-active:hover {
    -fx-background-color: white;
    -fx-text-fill: #553c9a;
}

.sidebar-section-title {
    -fx-text-fill: rgba(255, 255, 255, 0.8);
    -fx-font-size: 13px;
    -fx-font-weight: bold;
    -fx-padding: 20 0 10 20;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 2, 0, 0, 1);
}

.sidebar-user-info {
    -fx-background-color: rgba(255, 255, 255, 0.2);
    -fx-background-radius: 15px;
    -fx-padding: 12 15 12 15;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 2);
}

.sidebar-user-name {
    -fx-text-fill: white;
    -fx-font-size: 15px;
    -fx-font-weight: bold;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 3, 0, 0, 1);
}

.sidebar-user-email {
    -fx-text-fill: rgba(255, 255, 255, 0.85);
    -fx-font-size: 12px;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 2, 0, 0, 1);
}

/* Content Area */
.content-area {
    -fx-background-color: #f7fafc;
    -fx-padding: 30;
}

.content-title {
    -fx-font-size: 28px;
    -fx-font-weight: bold;
    -fx-text-fill: #2d3748;
}

.content-subtitle {
    -fx-font-size: 15px;
    -fx-text-fill: #718096;
}

/* ============================================
   NOTE CARDS
   ============================================ */
.note-card {
    -fx-background-color: white;
    -fx-background-radius: 20px;
    -fx-padding: 20;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 10, 0, 0, 4);
    -fx-cursor: hand;
}

.note-card:hover {
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 15, 0, 0, 6);
}

.note-card-blue {
    -fx-background-color: linear-gradient(to bottom right, white, #dbeafe);
    -fx-border-color: #60a5fa;
    -fx-border-radius: 20px;
    -fx-border-width: 2px;
}

.note-card-purple {
    -fx-background-color: linear-gradient(to bottom right, white, #e8dff5);
    -fx-border-color: #c3b1e1;
    -fx-border-radius: 20px;
    -fx-border-width: 2px;
}

.note-card-green {
    -fx-background-color: linear-gradient(to bottom right, white, #d1fae5);
    -fx-border-color: #34d399;
    -fx-border-radius: 20px;
    -fx-border-width: 2px;
}

.note-card-orange {
    -fx-background-color: linear-gradient(to bottom right, white, #fef3c7);
    -fx-border-color: #fbbf24;
    -fx-border-radius: 20px;
    -fx-border-width: 2px;
}

.note-card-title {
    -fx-font-size: 17px;
    -fx-font-weight: bold;
    -fx-text-fill: #2d3748;
}

.note-card-content {
    -fx-font-size: 14px;
    -fx-text-fill: #718096;
    -fx-wrap-text: true;
}

.note-card-date {
    -fx-font-size: 12px;
    -fx-text-fill: #a0aec0;
}

/* ============================================
   NOTE EDITOR
   ============================================ */
.editor-content-area {
    -fx-background-color: #fafafa;
    -fx-background-radius: 15px;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 15px;
    -fx-border-width: 2px;
    -fx-font-size: 15px;
    -fx-text-fill: #4a5568;
    -fx-prompt-text-fill: #a0aec0;
    -fx-padding: 15;
}

.editor-content-area:focused {
    -fx-border-color: #a78bfa;
    -fx-background-color: white;
}

.editor-content-area .content {
    -fx-background-color: transparent;
}

.editor-toolbar {
    -fx-background-color: #f7fafc;
    -fx-background-radius: 12px;
    -fx-padding: 10 15 10 15;
    -fx-spacing: 8;
}

.toolbar-btn {
    -fx-background-color: white;
    -fx-text-fill: #718096;
    -fx-font-size: 14px;
    -fx-padding: 8 12 8 12;
    -fx-background-radius: 8px;
    -fx-cursor: hand;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 8px;
}

.toolbar-btn:hover {
    -fx-background-color: #f0fdf4;
    -fx-border-color: #a8edea;
    -fx-text-fill: #5bcbba;
}

.toolbar-btn-favorite {
    -fx-background-color: white;
    -fx-text-fill: #cbd5e0;
    -fx-font-size: 18px;
    -fx-padding: 8 12 8 12;
    -fx-background-radius: 8px;
    -fx-cursor: hand;
}

.toolbar-btn-favorite:hover {
    -fx-text-fill: #f6ad55;
}

/* ============================================
   SEARCH & FAVORITES
   ============================================ */
.search-container {
    -fx-background-color: white;
    -fx-background-radius: 20px;
    -fx-padding: 25;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 10, 0, 0, 4);
}

.favorites-header {
    -fx-background-color: linear-gradient(to right, #fef3c7, #fde68a);
    -fx-background-radius: 20px;
    -fx-padding: 25;
}

.favorites-title {
    -fx-font-size: 24px;
    -fx-font-weight: bold;
    -fx-text-fill: #92400e;
}

/* ============================================
   SETTINGS VIEW
   ============================================ */
.settings-container {
    -fx-background-color: white;
    -fx-background-radius: 20px;
    -fx-padding: 30;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 10, 0, 0, 4);
}

.settings-section-title {
    -fx-font-size: 18px;
    -fx-font-weight: bold;
    -fx-text-fill: #2d3748;
    -fx-padding: 0 0 15 0;
}

.settings-section-icon {
    -fx-font-size: 24px;
    -fx-text-fill: #a78bfa;
}

.settings-item-label {
    -fx-font-size: 15px;
    -fx-text-fill: #4a5568;
}

.settings-item-description {
    -fx-font-size: 13px;
    -fx-text-fill: #a0aec0;
}

.combo-box-fresh {
    -fx-background-color: #f7fafc;
    -fx-background-radius: 10px;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 10px;
    -fx-border-width: 2px;
    -fx-padding: 8 15 8 15;
    -fx-font-size: 14px;
}

.combo-box-fresh:hover {
    -fx-border-color: #a78bfa;
}

/* ============================================
   SCROLLBAR
   ============================================ */
.scroll-bar {
    -fx-background-color: transparent;
}

.scroll-bar .track {
    -fx-background-color: transparent;
}

.scroll-bar .thumb {
    -fx-background-color: #cbd5e0;
    -fx-background-radius: 10px;
}

.scroll-bar .thumb:hover {
    -fx-background-color: #a0aec0;
}

.scroll-bar .increment-button,
.scroll-bar .decrement-button {
    -fx-background-color: transparent;
    -fx-padding: 0;
}

.scroll-bar .increment-arrow,
.scroll-bar .decrement-arrow {
    -fx-shape: "";
    -fx-padding: 0;
}

/* ============================================
   EMPTY STATE
   ============================================ */
.empty-state {
    -fx-alignment: center;
    -fx-padding: 60;
}

.empty-state-icon {
    -fx-font-size: 80px;
    -fx-text-fill: #e2e8f0;
}

.empty-state-title {
    -fx-font-size: 20px;
    -fx-font-weight: bold;
    -fx-text-fill: #a0aec0;
    -fx-padding: 20 0 10 0;
}

.empty-state-description {
    -fx-font-size: 15px;
    -fx-text-fill: #cbd5e0;
    -fx-text-alignment: center;
}

/* ============================================
   AI CHAT
   ============================================ */
.ai-chat-root {
    -fx-background-color: #f7fafc;
}

.ai-chat-header {
    -fx-background-color: linear-gradient(to right, #a8edea, #c3b1e1);
    -fx-background-radius: 0 0 25px 25px;
    -fx-padding: 20;
}

.ai-chat-title {
    -fx-font-size: 22px;
    -fx-font-weight: bold;
    -fx-text-fill: white;
}

.ai-chat-subtitle {
    -fx-font-size: 14px;
    -fx-text-fill: derive(white, -10%);
}

.chat-message-user {
    -fx-background-color: linear-gradient(to right, #a78bfa, #c084fc);
    -fx-background-radius: 18px 18px 5px 18px;
    -fx-padding: 12 18 12 18;
}

.chat-message-ai {
    -fx-background-color: white;
    -fx-background-radius: 18px 18px 18px 5px;
    -fx-padding: 12 18 12 18;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 18px 18px 18px 5px;
}

.chat-input-container {
    -fx-background-color: white;
    -fx-background-radius: 25px;
    -fx-border-color: #e2e8f0;
    -fx-border-radius: 25px;
    -fx-border-width: 2px;
    -fx-padding: 5 10 5 20;
}

.chat-input-field {
    -fx-background-color: transparent;
    -fx-border-color: transparent;
    -fx-font-size: 15px;
    -fx-text-fill: #4a5568;
    -fx-prompt-text-fill: #a0aec0;
}

.chat-send-btn {
    -fx-background-color: linear-gradient(to right, #a78bfa, #c084fc);
    -fx-background-radius: 20px;
    -fx-padding: 10 15 10 15;
    -fx-cursor: hand;
}

.chat-send-btn:hover {
    -fx-background-color: linear-gradient(to right, #8b5cf6, #a855f7);
}

/* ============================================
   HTML EDITOR STYLES (V2)
   ============================================ */
.html-editor {
    -fx-background-color: white;
    -fx-border-color: #e5e7eb;
    -fx-border-radius: 12px;
    -fx-background-radius: 12px;
}

.html-editor .top-toolbar {
    -fx-background-color: #f8fafc;
    -fx-padding: 8;
    -fx-border-color: #e5e7eb;
    -fx-border-width: 0 0 1 0;
}

.html-editor .bottom-toolbar {
    -fx-background-color: #f8fafc;
    -fx-padding: 8;
    -fx-border-color: #e5e7eb;
    -fx-border-width: 1 0 0 0;
}

.html-editor .web-view {
    -fx-background-color: white;
}

/* Toolbar Large Buttons */
.toolbar-btn-lg {
    -fx-background-color: #f1f5f9;
    -fx-text-fill: #475569;
    -fx-font-size: 16px;
    -fx-padding: 8 14;
    -fx-background-radius: 10px;
    -fx-border-radius: 10px;
    -fx-cursor: hand;
}

.toolbar-btn-lg:hover {
    -fx-background-color: #e2e8f0;
}

.toolbar-btn-danger {
    -fx-background-color: #fef2f2;
    -fx-text-fill: #dc2626;
}

.toolbar-btn-danger:hover {
    -fx-background-color: #fecaca;
}

/* Status Badge */
.status-badge {
    -fx-background-color: #e5e7eb;
    -fx-text-fill: #374151;
    -fx-font-size: 12px;
    -fx-font-weight: bold;
    -fx-padding: 5 12;
    -fx-background-radius: 12px;
}

.status-regular {
    -fx-background-color: #dbeafe;
    -fx-text-fill: #1e40af;
}

.status-urgent {
    -fx-background-color: #fee2e2;
    -fx-text-fill: #dc2626;
}

.status-ideas {
    -fx-background-color: #fef3c7;
    -fx-text-fill: #d97706;
}

.status-completed {
    -fx-background-color: #d1fae5;
    -fx-text-fill: #059669;
}

/* Sidebar Small Buttons */
.sidebar-btn-small {
    -fx-background-color: rgba(255, 255, 255, 0.1);
    -fx-text-fill: rgba(255, 255, 255, 0.85);
    -fx-font-size: 12px;
    -fx-padding: 8 12;
    -fx-background-radius: 8px;
    -fx-alignment: CENTER_LEFT;
    -fx-cursor: hand;
}

.sidebar-btn-small:hover {
    -fx-background-color: rgba(255, 255, 255, 0.25);
}

/* ============================================
   NEW NOTE DIALOG
   ============================================ */
.new-note-dialog {
    -fx-background-color: white;
    -fx-background-radius: 25px;
    -fx-padding: 30;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 30, 0, 0, 10);
}

.dialog-header-icon {
    -fx-font-size: 48px;
}

.dialog-title {
    -fx-font-size: 24px;
    -fx-font-weight: bold;
    -fx-text-fill: #2d3748;
}

.dialog-subtitle {
    -fx-font-size: 14px;
    -fx-text-fill: #718096;
}
